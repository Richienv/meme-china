<svg width="800" height="600" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <pattern id="grid" width="20" height="20" patternUnits="userSpaceOnUse">
      <rect width="20" height="20" fill="#1a1a1a"/>
      <path d="M 20 0 L 0 0 0 20" fill="none" stroke="#333" stroke-width="1"/>
    </pattern>
    <linearGradient id="fadeGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#005; stop-opacity:0.2"/>
      <stop offset="100%" style="stop-color:#207; stop-opacity:0.5"/>
    </linearGradient>
  </defs>
  <rect width="100%" height="100%" fill="url(#grid)"/>
  <rect width="100%" height="100%" fill="url(#fadeGradient)"/>
  
  <!-- Film strip elements -->
  <g opacity="0.15">
    <rect x="50" y="50" width="700" height="500" rx="5" ry="5" fill="none" stroke="#fff" stroke-width="3"/>
    <!-- Film perforations left -->
    <rect x="20" y="80" width="20" height="40" rx="3" ry="3" fill="#000" stroke="#fff" stroke-width="2"/>
    <rect x="20" y="140" width="20" height="40" rx="3" ry="3" fill="#000" stroke="#fff" stroke-width="2"/>
    <rect x="20" y="200" width="20" height="40" rx="3" ry="3" fill="#000" stroke="#fff" stroke-width="2"/>
    <rect x="20" y="260" width="20" height="40" rx="3" ry="3" fill="#000" stroke="#fff" stroke-width="2"/>
    <rect x="20" y="320" width="20" height="40" rx="3" ry="3" fill="#000" stroke="#fff" stroke-width="2"/>
    <rect x="20" y="380" width="20" height="40" rx="3" ry="3" fill="#000" stroke="#fff" stroke-width="2"/>
    <rect x="20" y="440" width="20" height="40" rx="3" ry="3" fill="#000" stroke="#fff" stroke-width="2"/>
    <rect x="20" y="500" width="20" height="40" rx="3" ry="3" fill="#000" stroke="#fff" stroke-width="2"/>
    
    <!-- Film perforations right -->
    <rect x="760" y="80" width="20" height="40" rx="3" ry="3" fill="#000" stroke="#fff" stroke-width="2"/>
    <rect x="760" y="140" width="20" height="40" rx="3" ry="3" fill="#000" stroke="#fff" stroke-width="2"/>
    <rect x="760" y="200" width="20" height="40" rx="3" ry="3" fill="#000" stroke="#fff" stroke-width="2"/>
    <rect x="760" y="260" width="20" height="40" rx="3" ry="3" fill="#000" stroke="#fff" stroke-width="2"/>
    <rect x="760" y="320" width="20" height="40" rx="3" ry="3" fill="#000" stroke="#fff" stroke-width="2"/>
    <rect x="760" y="380" width="20" height="40" rx="3" ry="3" fill="#000" stroke="#fff" stroke-width="2"/>
    <rect x="760" y="440" width="20" height="40" rx="3" ry="3" fill="#000" stroke="#fff" stroke-width="2"/>
    <rect x="760" y="500" width="20" height="40" rx="3" ry="3" fill="#000" stroke="#fff" stroke-width="2"/>
  </g>

  <!-- Chinese character for "movie" in background -->
  <text x="400" y="300" font-family="Arial, sans-serif" font-size="200" font-weight="bold" text-anchor="middle" fill="#fff" opacity="0.05">电影</text>
</svg> 